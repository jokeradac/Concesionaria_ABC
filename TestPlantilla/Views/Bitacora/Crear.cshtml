@model TestPlantilla.Models.Bitacora

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Bitacora</h3>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Lote: </label>
            <div class="col-md-6">
                @Html.Action("ListarSolicitudes","Bitacora")
                @Html.ValidationMessageFor(model => model.Solicitud, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="container">
            @Html.Action("TablaSolicitudes","Bitacora")
        </div>

        <br />
        <br />
        <br />
        <br />

        <div class="form-group">
            <label class="control-label col-md-2">Folio: </label>
            <div class="col-md-6">
                @Html.Action("ListarAutomoviles","Bitacora")
                @Html.ValidationMessageFor(model => model.Automovil, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />

        <div class="container">
            @Html.Action("TablaAutomoviles", "Bitacora")
        </div>
        <br />
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Agregar" class="btn btn-success btn-lg" />
            </div>
        </div>
    </div>
}

<div>
    <h4>@Html.ActionLink("Regresar", "Index", new { @class = " col-md-4" })</h4>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
